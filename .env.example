# ============================================
# GITHUB VARIABLES (Build Time)
# These are embedded into the frontend bundle during build.
# Set these in GitHub Actions secrets/variables.
# ============================================

# Ports (for local dev server)
VITE_APP_PORT=3000
VITE_GATEWAY_PORT=3001
VITE_KEYCARD_PORT=3002

# Environment
VITE_ENV=test

# API Mode - set to "true" to use gateway server, "false" for vercel serverless
VITE_USE_GATEWAY=false

# Tier Mapping (embedded in frontend bundle)
VITE_TEST_TIER_MAPPING='{"default":"free"}'
VITE_PROD_TIER_MAPPING='{"default":"free"}'

# Feature Flags
VITE_LAUNCHED=false


# ============================================
# HOSTING VARIABLES (Runtime)
# These are used by serverless functions and backend services.
# Set these in your hosting provider (Vercel, etc).
# ============================================

# Cognito User Pool & OAuth Configuration
COGNITO_USER_POOL_ID=your_user_pool_id
COGNITO_CLIENT_ID=your_client_id
COGNITO_CLIENT_SECRET=your_client_secret
COGNITO_DOMAIN=https://your-domain.auth.us-east-1.amazoncognito.com
COGNITO_REDIRECT_URI=http://localhost:3000/auth/callback
COGNITO_OAUTH_SCOPES=openid email profile
AWS_REGION=us-east-1

# DoDo Payments
DODO_PAYMENTS_API_KEY=your_dodo_api_key
DODO_PAYMENTS_ENVIRONMENT=test_mode
DODO_PAYMENTS_WEBHOOK_KEY=your_webhook_key

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/db_name?schema=public"

# MailJet (for waitlist subscription)
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_SECRET_KEY=your_mailjet_secret_key
MAILJET_LIST_ID=your_mailjet_list_id
